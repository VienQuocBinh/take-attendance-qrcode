<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>QRCodeController</servlet-name>
        <servlet-class>com.fptuni.prj.prj301.controller.QRCodeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginGoogleController</servlet-name>
        <servlet-class>com.fptuni.prj.prj301.controller.LoginGoogleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IdTokenVerifierAndParser</servlet-name>
        <servlet-class>com.fptuni.prj.prj301.googleaccess.IdTokenVerifierAndParser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckinController</servlet-name>
        <servlet-class>com.fptuni.prj.prj301.controller.CheckinController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>QRCodeController</servlet-name>
        <url-pattern>/QRCodeController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginGoogleController</servlet-name>
        <url-pattern>/login-google</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IdTokenVerifierAndParser</servlet-name>
        <url-pattern>/IdTokenVerifierAndParser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckinController</servlet-name>
        <url-pattern>/checkin</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
